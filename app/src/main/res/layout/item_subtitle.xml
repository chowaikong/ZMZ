<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="subtitle"
        type="me.knox.zmz.entity.Subtitle"
        />
  </data>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardCornerRadius="0dp"
      android:clickable="true"
      android:foreground="?attr/selectableItemBackground"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@android:color/white"
          android:orientation="vertical"
          android:padding="10dp"
          >

        <TextView
            android:id="@+id/title"
            android:transitionName="title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{subtitle.cnname}"
            android:textColor="@android:color/black"
            tools:text="name"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/source(subtitle.source)}"
            tools:text="playStatus"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/lang(subtitle.lang)}"
            tools:text="area"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/category(subtitle.category)}"
            tools:text="category"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/format(subtitle.format)}"
            tools:text="score"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/read(subtitle.views)}"
            tools:text="views"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/remark(subtitle.remark)}"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="remark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:minute='@{subtitle.dateline}'
            tools:text="2016-01-12"
            />
      </LinearLayout>
      <ImageView
          android:id="@+id/poster"
          android:layout_width="125dp"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          app:img="@{subtitle.resourceInfo.poster}"
          tools:src="@drawable/shield"
          android:transitionName="poster"
          />
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>